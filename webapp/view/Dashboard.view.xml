<mvc:View controllerName="ns.UserDetails.controller.Dashboard" xmlns:mvc="sap.ui.core.mvc" xmlns:uxap="sap.uxap" displayBlock="true"
	xmlns="sap.m" height="100%" xmlns:layout="sap.ui.layout">
	<Shell id="shell">
		<App id="app">
			<pages>
				<Page id="page" title="{i18n>systemUsers}">
					<content>
						<uxap:ObjectPageLayout id="ObjectPageLayout" showTitleInHeaderContent="true" showEditHeaderButton="true">
							<uxap:headerTitle>
								<uxap:ObjectPageDynamicHeaderTitle>
									<uxap:expandedHeading>
										<Title text="Total Number of Users: {userModel>/totalUsers}" wrapping="true"/>
									</uxap:expandedHeading>
								</uxap:ObjectPageDynamicHeaderTitle>
							</uxap:headerTitle>
							<uxap:headerContent>
								<FlexBox wrap="Wrap"></FlexBox>
							</uxap:headerContent>
							<uxap:sections>
								<uxap:ObjectPageSection titleUppercase="false" id="GraphSection" title="Graph">
									<uxap:subSections>
										<uxap:ObjectPageSubSection id="goalsSection">
											<Title text="Graph"/>
										</uxap:ObjectPageSubSection>
									</uxap:subSections>
								</uxap:ObjectPageSection>
								<uxap:ObjectPageSection titleUppercase="false" id="UserSection" title="Create User">
									<uxap:subSections>
										<uxap:ObjectPageSubSection id="CreateUserSection">
											<Title text="User"/>
										</uxap:ObjectPageSubSection>
									</uxap:subSections>
								</uxap:ObjectPageSection>
								<uxap:ObjectPageSection titleUppercase="false" id="ActiveSection" title="Active User">
									<uxap:subSections>
										<uxap:ObjectPageSubSection id="ActiveUserSection">
											<Table id="idProductsTable" inset="false" items="{ path: 'userModel>/activeUser', sorter: { path: 'Name' } }">
												<headerToolbar>
													<OverflowToolbar>
														<!--<content>-->
															<Input placeholder="User" value="{userModel>/username}" liveChange="onSearch" width="30%"  class="sapUiSizeCompact"/>
														<!--</content>-->
													</OverflowToolbar>
												</headerToolbar>
												<columns>
													<Column width="12em">
														<Text text="User name"/>
													</Column>
													<Column minScreenWidth="Tablet" demandPopin="true">
														<Text text="Description"/>
													</Column>
													<Column minScreenWidth="Desktop" demandPopin="true" hAlign="End">
														<Text text="Last loggedin date"/>
													</Column>
													<Column minScreenWidth="Desktop" demandPopin="true" hAlign="Center">
														<Text text="Status"/>
													</Column>
													<Column hAlign="End">
														<Text text=""/>
													</Column>
												</columns>
												<items>
													<ColumnListItem>
														<cells>
															<Text text="{userModel>Bname}"/>
														</cells>
														<cells></cells>
														<cells>
															<Text/>
														</cells>
														<cells>
															<Text text="{path:'userModel>Trdat', formatter:'ns.UserDetails.formatter.activeusers.dateFormatter'}"/>
														</cells>
															<cells>
															<Text text="{path:'userModel>Trdat', formatter:'ns.UserDetails.formatter.activeusers.activeUsers'}"/>
														</cells>
													</ColumnListItem>
												</items>
											</Table>
										</uxap:ObjectPageSubSection>
									</uxap:subSections>
								</uxap:ObjectPageSection>
							</uxap:sections>
						</uxap:ObjectPageLayout>
					</content>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>